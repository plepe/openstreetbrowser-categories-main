            "  {% set key = 'office' %}",
            "  {% set value = tags.office %}",
            "{% endif %}"
        ],
        "description": [
            "{% if key == 'office' %}",
            "  {{ keyTrans('office') }} ({{ tagTrans('office', tags.office) }})",
            "{% else %}",
            "  {{ tagTrans(key, value) }}",
            "{% endif %}"
        ],
        "markerSign": [
            "{% set data = const[key ~ '=' ~ value] %}",
            "{% if data %}",
            "{{ data.sign|raw }}",
            "{% endif %}"
        ]
    },
    "info": [
